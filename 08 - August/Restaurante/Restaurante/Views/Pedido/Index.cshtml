@{

    @model IEnumerable<PedidoModel>

    <div class="container">

        <div class="d-flex justify-content-between align-items-center mb-5">
            <h1>Pedidos</h1>
            <a class="btn btn-success mx-2" asp-controller="Pedido" asp-action="Cadastrar">Cadastrar Pedido</a>
        </div>

        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Data</th>
                    <th scope="col">Valor</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var pedido in Model)
                    {
                        <tr>
                            <th scope="row">@pedido.Id</th>
                            <td>@pedido.Cliente</td>
                            <td>@pedido.Data</td>
                            <td>@pedido.Valor</td>
                            <td>
                                <a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@pedido.Id"  class="btn btn-warning mx-2">Editar</a>
                                <a asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@pedido.Id" class="btn btn-danger mx-2">Excluir</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>


}
